<Window x:Class="App_AuthReg.Windows.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:App_AuthReg.Windows"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBox Width="200" Height="50" x:Name="Login_TB" ToolTip="Введите здесь логин" TextAlignment="Center"></TextBox>
            <PasswordBox Width="200" Height="50" Margin="10" x:Name="Password_TB" ToolTip="Введите здесь пароль"></PasswordBox>
            <Button x:Name="Reg" Click="Reg_Click"  Width="300" Height="50" Margin="10" Content="Зарегистрироваться" FontSize="30"></Button>
        </StackPanel>
    </Grid>
</Window>
